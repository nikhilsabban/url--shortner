<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <style>
      /* Global styles */
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #b0bec5, #cfd8dc);
        color: #333;
      }

      h1 {
        text-align: center;
        font-size: 3rem;
        color: #4caf50;
        margin-top: 40px;
      }

      /* Logo styling */
      .logo {
        position: absolute;
        top: 20px;
        left: 20px;
        cursor: pointer;
        transition: transform 0.3s ease;
      }

      .logo:hover {
        transform: scale(1.1);
      }

      /* Logo Container */
      .logo-container {
        display: flex;
        align-items: center;
        font-size: 1.6rem;
        font-weight: bold;
        color: #4caf50;
      }

      .logo-text {
        font-size: 1.8rem;
        color: #4caf50;
      }

      .logo-symbol {
        margin-left: 5px;
        font-size: 1.6rem;
        color: #007bff;
      }

      /* Form container styling */
      .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 30px;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 15px;
      }

      .form-container label {
        font-size: 1.2rem;
        margin-top: 15px;
        color: #555;
      }

      .form-container input {
        padding: 10px;
        width: 100%;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
        margin-bottom: 20px;
      }

      .form-container button {
        padding: 12px 20px;
        background-color: #4caf50;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .form-container button:hover {
        background-color: #45a049;
      }

      /* Copy button */
      .copy-button {
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s ease;
      }

      .copy-button:hover {
        background-color: #0056b3;
      }

      /* Table styles */
      table {
        width: 100%;
        margin-top: 30px;
        border-collapse: collapse;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
      }

      table th,
      table td {
        padding: 12px;
        text-align: center;
        border: 1px solid #ddd;
      }

      table th {
        background-color: #4caf50;
        color: white;
        font-size: 1.1rem;
      }

      table td {
        background-color: #f9f9f9;
      }

      /* Responsive design */
      @media (max-width: 768px) {
        h1 {
          font-size: 2rem;
        }

        .form-container {
          padding: 15px;
          width: 90%;
        }

        table th,
        table td {
          font-size: 0.9rem;
        }
      }
    </style>
  </head>
  <body>
    <!-- Logo Section -->
    <a href="http://localhost:8001/" class="logo">
      <div class="logo-container">
        <span class="logo-text">URL</span><span class="logo-symbol">ðŸ”—</span>
      </div>
    </a>

    <h1>URL Shortener</h1>
    <% if (locals.id) { %>
    <div style="text-align: center; font-size: 1.2rem; color: #555;">
      <p>
        URL Generated: <a href="http://localhost:8001/url/<%= id %>" target="_blank" style="color: #4caf50;">http://localhost:8001/url/<%= id %></a>
      </p>
      <button class="copy-button" id="copyButton" onclick="copyURL()">Copy Short URL</button>
    </div>
    <% } %>

    <div class="form-container">
      <form method="POST" action="/url">
        <label for="url">Enter Your Original URL</label>
        <input type="text" name="url" id="url" placeholder="https://example.com" required />
        <button type="submit">Generate</button>
      </form>
    </div>

    <div style="margin-top: 30px; text-align: center;">
      <% if (locals.urls && locals.urls.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>S. No</th>
            <th>ShortID</th>
            <th>Redirect</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= url.shortId %></td>
            <td><a href="<%= url.redirectURL %>" target="_blank" style="color: #007bff;">Redirect</a></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } else { %>
      <p style="font-size: 1.2rem; color: #777;">No URLs generated yet.</p>
      <% } %>
    </div>

    <script>
      function copyURL() {
        // Get the short URL text
        const shortURL = document.querySelector("a[href^='http://localhost:8001/url']");
        if (shortURL) {
          // Create a temporary input to copy the text
          const tempInput = document.createElement("input");
          tempInput.value = shortURL.href;
          document.body.appendChild(tempInput);
          tempInput.select();
          document.execCommand("copy");
          document.body.removeChild(tempInput);
          alert("Short URL copied to clipboard!");
        }
      }
    </script>
  </body>
</html>
